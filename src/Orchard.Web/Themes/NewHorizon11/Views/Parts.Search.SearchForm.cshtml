@using Orchard.Search.ViewModels;

@using(Html.BeginForm("index", "search", new { area = "Orchard.Search" }, FormMethod.Get, new { @class = "searchform" })) { 
    <fieldset>
        @Html.TextBox("q", (SearchViewModel)Model.ViewModel.Query,new{@class="textbox"})
        <button type="submit" class="button">@T("Search")</button>
    </fieldset>
}